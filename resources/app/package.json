{
    "name": "edmanager",
    "version": "1.0.0",
    "description": "Professional Enshrouded Desktop Manager",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win"
    },
    "dependencies": {
        "archiver": "^6.0.1",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "fs-extra": "^11.1.1",
        "node-cron": "^3.0.3",
        "node-fetch": "^2.7.0",
        "pidusage": "^3.0.2"
    },
    "devDependencies": {
        "electron": "^25.3.0",
        "electron-builder": "^24.6.3"
    },
    "build": {
        "appId": "com.hachi.edmanager",
        "productName": "EDManager",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": [
                "nsis",
                "dir"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "asar": false
    }
}